# Preferred editor
export EDITOR='nvim'
export VISUAL='nvim'

# Aliases
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias zshconfig="nvim ~/.config/zsh/.zshrc"
alias reload="source ~/.config/zsh/.zshrc"
alias tse="~/.local/bin/tmux-sessionizer"
# Git aliases
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline --graph --decorate'
